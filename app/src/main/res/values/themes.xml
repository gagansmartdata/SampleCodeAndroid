<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StarterKit" parent="android:Theme.Material.Light.NoActionBar" />


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either an animated drawable or a static drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.StarterKit</item>
    </style>


</resources>